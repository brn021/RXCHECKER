{
  "id": "metformina",
  "name": "Metformina",
  "generic_name": "cloridrato de metformina",
  "brand_names": ["Glucophage", "Metformina Generis", "Diabex", "Risidon"],
  "atc_code": "A10BA02",
  "therapeutic_class": "Antidiabético - Biguanida",
  "prescription_status": "MSRM",
  "last_updated": "2025-01-01",
  
  "drug_action": {
    "title": "Mecanismo de Ação",
    "content": "A metformina diminui a glicemia principalmente através da redução da gluconeogénese hepática e aumento da utilização periférica de glucose. Atua apenas na presença de insulina endógena, sendo eficaz apenas se existirem células beta pancreáticas funcionais residuais.",
    "mechanisms": [
      "Inibição da gluconeogénese hepática (principal)",
      "Aumento da captação de glucose muscular",
      "Redução da absorção intestinal de glucose",
      "Melhoria da sensibilidade à insulina",
      "Redução da lipólise (efeito modesto)"
    ],
    "source": {
      "type": "RCM",
      "reference": "RCM Metformina - Secção 5.1"
    }
  },
  
  "sections": {
    "indications": {
      "title": "Indicações e Posologia",
      "content": {
        "primary_indications": [
          "Diabetes mellitus tipo 2 (monoterapia ou combinação)",
          "Diabetes mellitus tipo 1 (combinação com insulina, se IMC ≥25 kg/m²)",
          "Prevenção diabetes tipo 2 (adultos 18-74 anos com fatores risco)",
          "Síndrome ovário poliquístico (SOP) - não licenciado"
        ],
        "dosage": [
          {
            "indication": "DM tipo 2 - monoterapia ou combinação",
            "formulation": "Libertação imediata",
            "population": "Adulto",
            "initial_dose": "500 mg uma vez por dia com pequeno-almoço (≥1 semana)",
            "titration": "500 mg duas vezes por dia com pequeno-almoço e jantar (≥1 semana)",
            "maintenance": "500 mg três vezes por dia com refeições",
            "maximum": "2000 mg/dia (alguns doentes até 3000 mg/dia)",
            "notes": "Aumentar gradualmente para melhor tolerabilidade GI"
          },
          {
            "indication": "DM tipo 2",
            "formulation": "Libertação prolongada",
            "initial_dose": "500 mg uma vez por dia com jantar",
            "titration": "Aumentar gradualmente cada 10-15 dias",
            "maintenance": "1000-2000 mg uma vez por dia com jantar",
            "alternative": "1000 mg duas vezes por dia com refeições (se controlo inadequado com dose única)",
            "maximum": "2000 mg/dia",
            "notes": "Se controlo inadequado, mudar para formulação libertação imediata"
          },
          {
            "indication": "DM tipo 1 + insulina (IMC ≥25 kg/m²)",
            "formulation": "Ambas",
            "dose_schedule": "Igual ao DM tipo 2",
            "maximum": "2000 mg/dia",
            "notes": "Sempre em combinação com insulina"
          },
          {
            "indication": "Prevenção DM tipo 2",
            "formulation": "Libertação prolongada",
            "population": "Adultos 18-74 anos",
            "dose_schedule": "Igual tratamento DM tipo 2",
            "maximum": "2000 mg/dia",
            "criteria": "Consultar literatura do produto para fatores de risco"
          },
          {
            "indication": "Síndrome ovário poliquístico",
            "formulation": "Libertação imediata",
            "population": "Adulto (iniciação por especialista)",
            "initial_dose": "500 mg uma vez por dia com pequeno-almoço (1 semana)",
            "titration": "500 mg duas vezes por dia (1 semana)",
            "maintenance": "1500-1700 mg/dia em 2-3 doses divididas com refeições",
            "maximum": "2000 mg/dia",
            "notes": "Indicação não licenciada"
          }
        ],
        "pediatric_dosing": {
          "age_range": "10-17 anos (uso especializado)",
          "initial_dose": "500 mg uma vez por dia (≥1 semana)",
          "maintenance": "Até 2000 mg/dia em 2-3 doses divididas",
          "notes": "Experiência limitada <10 anos"
        }
      },
      "source": {
        "type": "RCM",
        "reference": "RCM Metformina - Secção 4.2"
      }
    },
    
    "safety_warnings": {
      "title": "Informações Importantes de Segurança",
      "content": {
        "lactic_acidosis": {
          "warning": "Acidose láctica rara mas potencialmente fatal",
          "incidence": "~0,03 casos/1000 doentes-ano",
          "risk_factors": [
            "Insuficiência renal (TFG <30 mL/min/1,73m²)",
            "Insuficiência hepática",
            "Insuficiência cardíaca descompensada",
            "Hipoxia tecidular",
            "Desidratação",
            "Infeção grave, sepsis",
            "Cirurgia major",
            "Intoxicação alcoólica aguda"
          ],
          "symptoms": [
            "Náuseas, vómitos, dor abdominal",
            "Dispneia, hiperventilação",
            "Hipotermia, cãibras musculares",
            "Astenia marcada",
            "pH sanguíneo <7,35, lactato >5 mmol/L"
          ],
          "action": "Suspender imediatamente, hospitalização urgente"
        },
        "vitamin_b12_deficiency": {
          "warning": "Deficiência B12 - efeito adverso comum (Alerta Infarmed 2022)",
          "risk_factors": [
            "Dose elevada",
            "Duração tratamento prolongada",
            "Idade avançada",
            "Dieta pobre B12",
            "Malabsorção prévia",
            "Gastrectomia"
          ],
          "symptoms": [
            "Anemia megaloblástica",
            "Neuropatia periférica",
            "Fadiga, fraqueza",
            "Distúrbios memória/concentração",
            "Glossite, estomatite"
          ],
          "monitoring": "Dosear B12 se suspeita deficiência, considerar monitorização periódica"
        },
        "pregnancy_safety": {
          "update": "Alerta Infarmed Março 2022 - sem preocupações segurança",
          "indication": "Adjuvante ou alternativa insulina na gravidez se clinicamente indicado",
          "evidence": "Estudo coorte finlandês não identificou problemas segurança"
        }
      },
      "source": {
        "type": "Alerta regulamentar",
        "reference": "Infarmed - Alertas Metformina 2022"
      }
    },
    
    "contraindications": {
      "title": "Contraindicações",
      "content": [
        "Acidose metabólica aguda (incluindo acidose láctica e cetoacidose diabética)",
        "Insuficiência renal grave (TFG <30 mL/min/1,73m²)",
        "Condições que podem causar hipoxia tecidular:",
        "- Insuficiência cardíaca descompensada",
        "- Enfarte miocárdio recente",
        "- Choque",
        "- Insuficiência respiratória",
        "- Sepsis",
        "Insuficiência hepática",
        "Intoxicação alcoólica aguda",
        "Alcoolismo crónico",
        "Desidratação grave",
        "Hipersensibilidade à metformina"
      ],
      "temporary_discontinuation": {
        "situations": [
          "Administração contraste iodado (suspender 48h antes e após)",
          "Cirurgia geral (anestesia geral, espinal, epidural)",
          "Doença aguda grave (vómitos, diarreia, febre, hipoxia)"
        ],
        "reinitiation": "Apenas após confirmação função renal normal"
      },
      "source": {
        "type": "RCM",
        "reference": "RCM Metformina - Secção 4.3"
      }
    },
    
    "cautions": {
      "title": "Precauções",
      "content": [
        "Insuficiência renal ligeira-moderada (monitorizar função renal)",
        "Risco geral de acidose láctica",
        "Fármacos que podem alterar função renal",
        "Insuficiência cardíaca crónica estável (monitorizar função cardíaca)",
        "Idosos (função renal frequentemente diminuída)",
        "Cirurgia/procedimentos com contraste (suspensão temporária)",
        "Deficiência B12 (monitorização)",
        "Gravidez (pode usar se clinicamente indicado)"
      ],
      "elderly_stopp_criteria": {
        "potentially_inappropriate": "TFG <30 mL/min/1,73m² (contraindicado insuficiência renal grave, risco acidose láctica)"
      },
      "source": {
        "type": "RCM",
        "reference": "RCM Metformina - Secção 4.4"
      }
    },
    
    "interactions": {
      "title": "Interações Medicamentosas",
      "content": [
        {
          "category": "Risco Acidose Láctica",
          "drugs": [
            {
              "name": "Contrastes iodados",
              "effect": "Insuficiência renal aguda → acidose láctica",
              "management": "Suspender metformina 48h antes e após contraste. Confirmar função renal normal antes reintroduzir"
            },
            {
              "name": "Diuréticos (especialmente ansa e tiazidas)",
              "effect": "Deterioração função renal",
              "management": "Monitorizar função renal regularmente"
            },
            {
              "name": "IECAs, ARAs, AINEs",
              "effect": "Risco insuficiência renal funcional",
              "management": "Vigilância função renal, especialmente início tratamento"
            }
          ]
        },
        {
          "category": "Alteração Glicemia",
          "drugs": [
            {
              "name": "Corticosteroides",
              "effect": "Hiperglicemia, antagonismo efeito antidiabético",
              "management": "Monitorizar glicemia mais frequentemente, ajustar dose"
            },
            {
              "name": "Beta-2 agonistas (doses altas)",
              "effect": "Hiperglicemia",
              "management": "Especial atenção com salbutamol IV ou nebulizações frequentes"
            },
            {
              "name": "Tiazidas e diuréticos relacionados",
              "effect": "Hiperglicemia",
              "management": "Monitorizar controlo glicémico"
            }
          ]
        },
        {
          "category": "Alteração Farmacocinética",
          "drugs": [
            {
              "name": "Cimetidina",
              "effect": "Aumento níveis metformina (inibição secreção tubular)",
              "management": "Monitorizar sinais toxicidade, considerar alternativa antiH2"
            },
            {
              "name": "Álcool",
              "effect": "Risco acidose láctica (especialmente jejum ou malnutrição)",
              "management": "Evitar consumo excessivo álcool"
            }
          ]
        },
        {
          "category": "Sinergia Terapêutica",
          "drugs": [
            {
              "name": "Insulina",
              "effect": "Efeito aditivo hipoglicemiante",
              "management": "Pode necessitar redução dose insulina"
            },
            {
              "name": "Sulfonilureias",
              "effect": "Risco hipoglicemia",
              "management": "Iniciar doses baixas, titular gradualmente"
            }
          ]
        }
      ],
      "source": {
        "type": "RCM",
        "reference": "RCM Metformina - Secção 4.5"
      }
    },
    
    "side_effects": {
      "title": "Efeitos Adversos",
      "content": {
        "very_common": [
          "Distúrbios gastrointestinais (>10%): náuseas, vómitos, diarreia, dor abdominal, perda apetite"
        ],
        "common": [
          "Alterações paladar (metálico)",
          "Deficiência vitamina B12 (uso prolongado)",
          "Diminuição absorção B12/folatos"
        ],
        "rare": [
          "Acidose láctica (potencialmente fatal)",
          "Hepatite (reversível com suspensão)",
          "Reações cutâneas (eritema, prurido, urticária)"
        ],
        "gi_effects_management": {
          "prevention": [
            "Iniciar dose baixa",
            "Aumentar gradualmente",
            "Tomar com refeições",
            "Considerar formulação libertação prolongada"
          ],
          "notes": "Efeitos GI mais frequentes no início, geralmente resolvem espontaneamente"
        },
        "serious_effects": {
          "lactic_acidosis": {
            "frequency": "Muito raro (<0,01%)",
            "mortality": "~50% se não tratada rapidamente",
            "monitoring": "Suspeitar se sintomas inespecíficos + fatores risco"
          }
        }
      },
      "source": {
        "type": "RCM",
        "reference": "RCM Metformina - Secção 4.8"
      }
    },
    
    "special_populations": {
      "title": "Populações Especiais",
      "content": {
        "pregnancy": {
          "category": "Segura (atualização 2022)",
          "indications": [
            "Diabetes pré-gestacional",
            "Diabetes gestacional"
          ],
          "notes": "Mulheres com diabetes gestacional devem descontinuar após parto",
          "evidence": "Estudo coorte finlandês sem preocupações segurança"
        },
        "lactation": {
          "safety": "Pode usar em diabetes pré-existente",
          "excretion": "Excretada leite materno pequenas quantidades",
          "monitoring": "Vigilância hipoglicemia lactente (improvável)"
        },
        "pediatric": {
          "age_range": "≥10 anos (uso especializado)",
          "considerations": [
            "Experiência limitada <10 anos",
            "Considerar redução dose insuficiência renal moderada",
            "Crescimento e desenvolvimento normais"
          ]
        },
        "elderly": {
          "considerations": [
            "Função renal frequentemente diminuída",
            "Iniciar doses baixas",
            "Monitorização função renal mais frequente",
            "Maior risco acidose láctica",
            "Cuidado com desidratação"
          ],
          "monitoring": "Função renal pelo menos 2x/ano se >65 anos"
        }
      },
      "source": {
        "type": "RCM",
        "reference": "RCM Metformina - Secção 4.6"
      }
    },
    
